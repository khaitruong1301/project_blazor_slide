@page "/tinder"
@layout HomePageMaster
<div class="container">
    <h3>Tinder app</h3>
    <div class="row">
        <div class="col-3">
            <PersonComponent @ref="personComRef" />
        </div>
    </div>
    <button class="btn btn-danger mt-2" @onclick="handleChangePerson">Random</button>
</div>

@code {
    public PersonComponent personComRef;
    void handleChangePerson()
    {
        // Kiểm tra xem component con đã khởi tạo chưa
        if (personComRef != null)
        {
            personComRef.random(); // Gọi phương thức random() trên component con
            personComRef.
        }
    }


}