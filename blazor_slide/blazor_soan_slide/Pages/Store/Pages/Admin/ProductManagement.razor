@page "/admin/product-management"
@layout AdminMasterPage
@inject ProductStoreService prdService;

<h3>Product management</h3>
<div class="container">
    <NavLink class="btn btn-success" href="/admin/product">Add new product</NavLink>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductStore item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img src="@item.Image" alt="..." width="50" height="50" /></td>
                    <td>@item.Price</td>
                    <td>
                        <button class="btn btn-danger">Del</button>
                        <NavLink class="btn btn-success" href="/admin/product/">Edit</NavLink>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    public IEnumerable<ProductStore> items = new List<ProductStore>();
    protected override async Task OnInitializedAsync()
    {
        items = await prdService.GetAllProductAsync();
    }

}
